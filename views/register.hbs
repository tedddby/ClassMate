<body>
<div id="preloader-active">
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="preloader-inner position-relative">
            <div class="preloader-circle"></div>
            <div class="preloader-img pere-text">
                <img src="assets/img/logo/loader.png" alt="">
            </div>
        </div>
    </div>
</div>
<header class="header theme-clr-bg text-white py-3 shadow">
    <div class="container d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <img src="assets/img/logo/logo2.png" alt="Logo" class="logo" style="height: 40px; margin-right: 15px;">
        </div>
    </div>
</header>
<main class="container mt-5" id="login-content">
    <h2 class="login-title theme-clr-txt">Join ClassMate</h2>
    <div class="login-box card shadow mt-4">
        <div class="card-body" id="login-card">
            <form id="login-form">
                <div class="form-group">
                    <label for="name">Name<i class="required-icon">*</i></label>
                    <input type="text" id="name" class="form-control" placeholder="Enter your name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email<i class="required-icon">*</i></label>
                    <input type="email" id="email" class="form-control" placeholder="Enter your email" required>
                </div>
                <div class="form-group">
                    <label for="semester">Current semester<i class="required-icon">*</i></label>
                    <br>
                    <select id="semester" class="form-control" required>
                        <option value="" disabled selected>Select semester</option>
                        <option value="1">Semester One</option>
                        <option value="2">Semester Two</option>
                        <option value="3">Semester Three</option>
                        <option value="4">Semester Four</option>
                        <option value="5" disabled>Semester Five (soon)</option>
                        <option value="6" disabled>Semester Six (soon)</option>
                        <option value="7" disabled>Semester Seven (soon)</option>
                        <option value="8" disabled>Semester Eight (soon)</option>
                    </select>
                    <br>
                    <br>
                </div>
                <div class="form-group">
                    <label for="department">Department<i class="required-icon">*</i></label>
                    <br>
                    <select id="department" class="form-control" required>
                        <option value="" disabled selected>Select department</option>
                        <option value="IT">Information Technology</option>
                        <option value="CS">Computer Science</option>
                        <option value="SE">Software Engineering</option>
                        <option value="NW">Network And Computer System</option>
                        <option value="IS">Information System</option>
                    </select>
                    <br>
                    <br>
                </div>
                <div class="form-group mt-3">
                    <label for="password">Password<i class="required-icon">*</i></label>
                    <input type="password" id="password" class="form-control" placeholder="Enter your password" required>
                    <p id="password-comment" style="white-space: pre-line; font-size: small"  class="theme-clr-txt"></p>
                </div>
                <div class="form-group mt-3">
                    <label for="repassword">Re-enter Password<i class="required-icon">*</i></label>
                    <input type="password" id="repassword" class="form-control" placeholder="Re-Enter your password" required>
                </div>
                <div class="form-group mt-3">
                    <label for="phoneNo">Phone Number</label>
                    <input type="text" id="phoneNo" class="form-control" placeholder="ex: 249123456789">
                </div>
                <div class="text-center mt-3">
                    <i class="required-icon" id="required">* Means Required.</i>
                </div>
                <button type="submit" class="theme-clr-btn genric-btn e-large mt-4 w-100" id="login-btn">Register</button>
            </form>
        </div>
    </div>
</main>
